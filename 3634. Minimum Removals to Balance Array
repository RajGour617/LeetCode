class Solution {
    public int minRemoval(int[] nums, int k) {
        Arrays.sort(nums);
        int i = 0;
        int j = 0;
        int min = nums[0];
        int max = nums[0];
        int maxLen = 1;

        while (j < nums.length) {
            min = nums[i];
            max = nums[j];

            // Do i++, while max > min*k
            while (i < j && (long) max > (long) min * k) {
                i++;
                min = nums[i];
            }
            maxLen = Math.max(maxLen, j - i + 1);
            j++;
        }

        return nums.length - maxLen;
    }
}
